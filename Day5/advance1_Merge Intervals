class Solution {
public:
    vector<vector<int>> merge(vector<vector<int>>& intervals) {
        sort(intervals.begin(), intervals.end(), [](const vector<int>& a, const vector<int>& b) {
            return a[0] < b[0];
        });

        vector<vector<int>> mergedIntervals;

        for (const auto& currentInterval : intervals) {
            if (mergedIntervals.empty() || currentInterval[0] > mergedIntervals.back()[1]) {
                mergedIntervals.push_back(currentInterval);
            } else {
                mergedIntervals.back()[1] = max(mergedIntervals.back()[1], currentInterval[1]);
            }
        }

        return mergedIntervals;
    }
};
