#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> a(n);
    int max_h = 0;
    int min_h = 101;
    int max_idx = -1;
    int min_idx = -1;

    for (int i = 0; i < n; ++i) {
        cin >> a[i];
        if (a[i] > max_h) {
            max_h = a[i];
            max_idx = i;
        }
        if (a[i] <= min_h) {
            min_h = a[i];
            min_idx = i;
        }
    }

    int moves = 0;
    if (max_idx > 0) {
        moves += max_idx;
    }
    
    if (min_idx < n - 1) {
        moves += (n - 1) - min_idx;
    }

    if (max_idx > min_idx) {
        moves--;
    }

    cout << moves << endl;

    return 0;
}
