#include <iostream>
#include <vector>
#include <numeric>
#include <algorithm>

using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> a(n);
    int total_sum = 0;
    for (int i = 0; i < n; ++i) {
        cin >> a[i];
        total_sum += a[i];
    }
    sort(a.begin(), a.end());
    
    reverse(a.begin(), a.end());
    
    int my_sum = 0;
    int coins_count = 0;
    for (int i = 0; i < n; ++i) {
        my_sum += a[i];
        coins_count++;
        if (my_sum > total_sum - my_sum) {
            break;
        }
    }
    cout << coins_count << endl;
    return 0;
}
