#include <iostream>
#include <string>
#include <algorithm>

using namespace std;

int main() {
    string s;
    cin >> s;

    int len = s.length();

    for (int i = 0; i < len - 1; ++i) {
        for (int j = 0; j < len - i - 1; ++j) {
            if (s[j] != '+') {
                if (j + 2 < len && s[j] > s[j + 2]) {
                    char temp = s[j];
                    s[j] = s[j + 2];
                    s[j + 2] = temp;
                }
            }
        }
    }

    cout << s << endl;

    return 0;
}
