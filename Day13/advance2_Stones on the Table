#include <iostream>
#include <string>

using namespace std;

int main() {
    int n;
    cin >> n;
    string s;
    cin >> s;

    int stones_to_remove = 0;
    for (int i = 0; i < n - 1; ++i) {
        if (s[i] == s[i+1]) {
            stones_to_remove++;
        }
    }

    cout << stones_to_remove << endl;

    return 0;
}
